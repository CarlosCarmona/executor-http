{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "runnerty-executor-http",
  "definitions": {
    "config":
    { "type": "object",
      "required": ["id","type"],
      "properties":{
        "id": {"type": "string"},
        "type": {"type": "string", "pattern": "runnerty-executor-http"}
      }
    },
    "params":
    { "type": "object",
      "required": ["id","method","uri"],
      "properties":{
        "id": {"type": "string"},
        "method": {"type": "string"},
        "uri": {"type": "string"},
        "headers":{"type":"object"},
        "body": {"type": "string"},
        "form":{"type":"object"},
        "formData":{"type":"object"},
        "qs":{"type":"object"},
        "multipart":{"type":["array","object"]},
        "files":{
          "type":"array",
          "items":{
            "type": "object",
            "required": ["name","path"],
            "properties": {
              "name": {"type": "string"},
              "path": {"type": "string"}
            }
          }
        },
        "gzip":{"type":"boolean"},
        "json":{"type":"boolean"},
        "jar":{"type":"boolean"},
        "timeout":{"type":"number"},
        "auth": {
          "type": "object",
          "items": {
            "username":{"type":"string"},
            "pass":{"type":"string"},
            "sendImmediately":{"type":"boolean"},
            "bearer":{"type":"string"}
          }
        },
        "agentOptions": {
          "type": "object",
          "items": {
            "ca":{"type":"string"},
            "cert":{"type":"string"},
            "pfx":{"type":"string"},
            "ca_file":{"type":"string"},
            "cert_file":{"type":"string"},
            "pfx_file":{"type":"string"},
            "secureProtocol":{"type":"string"},
            "key":{"type":"string"},
            "passphrase":{"type":"string"},
            "socksHost":{"type":"string"},
            "socksPort":{"type":"number"}
          }
        },
        "oauth":{
          "type": "object",
          "items": {
            "consumer_key": {"type":"string"},
            "consumer_secret": {"type":"string"},
            "token": {"type":"string"},
            "token_secret": {"type":"string"},
            "verifier": {"type":"string"}
          }
        }
      }
    }
  }
}